def options(opt): pass

def configure(conf): pass

def build(bld):
  if bld.env.HAVE_ZOOKEEPER_H:
    bld.program(
      source = 'jubactl.cpp',
      target = 'jubactl',
      includes = '.',
      use = 'MSGPACK PFICOMMON LIBGLOG ZOOKEEPER_MT jubacommon'
      )

  bld.program(
    source = 'jubaconv.cpp',
    target = 'jubaconv',
    includes = '.',
    use = 'PFICOMMON jubacommon jubaconverter'
    )

  bld.program(
    source = 'jubastatus.cpp',
    target = 'jubastatus',
    includes = '.',
    use = 'MSGPACK PFICOMMON jubacommon'
    )

  bld.program(
    source = 'jubasave.cpp',
    target = 'jubasave',
    includes = '.',
    use = 'MSGPACK PFICOMMON jubacommon'
    )

  bld.program(
    source = 'jubaload.cpp',
    target = 'jubaload',
    includes = '.',
    use = 'MSGPACK PFICOMMON jubacommon'
    )

