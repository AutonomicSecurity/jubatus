import Options

def options(opt): pass

def configure(conf): pass

def build(bld):
  cppfiles = [
  'inverted_index_storage.cpp',
  'sparse_matrix_storage.cpp',
  ]
  use = 'PFICOMMON jubacommon MSGPACK'

  bld.shlib(
    source = cppfiles,
    target = 'jubastorage',
    includes = '.',
    use = use
   )
  bld.install_files('${PREFIX}/include/jubatus/core/storage', """
  fixed_size_heap.hpp
  inverted_index_storage.hpp
  recommender_storage_base.hpp
  recommender_storage.hpp
  sparse_matrix_storage.hpp
  storage_type.hpp
  """)
