subdirs = []

def options(opt):
  opt.recurse(subdirs)

def configure(conf):
  conf.recurse(subdirs)

def build(bld):
  import Options
  src = 'exception.cpp key_manager.cpp vector_util.cpp'

  bld.shlib(
    source = src,
    target = 'jubacommon',
    includes = '.',
    use = 'PFICOMMON'
    )
  bld.install_files('${PREFIX}/include/jubatus/core/common', """
byte_buffer.hpp
exception.hpp
exception_info.hpp
key_manager.hpp
type.hpp
unordered_map.hpp
vector_util.hpp""")
